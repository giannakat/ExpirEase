<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_rounded_back"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Household List"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <RelativeLayout
        android:id="@+id/household_container"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_marginTop="120dp"
        android:orientation="vertical"
        android:background="@drawable/border2">

        <RelativeLayout
            android:id="@+id/user1"
            android:layout_width="325dp"
            android:layout_height="80dp"
            android:background="@drawable/border"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/giannapic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/img_developer_giana"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/bg_shape_circle_border"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/username"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Gianna Carreon"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_heart_hollow"
                android:layout_toRightOf="@id/username"
                android:layout_marginStart="40dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user2"
            android:layout_width="325dp"
            android:layout_height="80dp"
            android:background="@drawable/border"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@id/user1">

            <ImageView
                android:id="@+id/jmpic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/img_developer_jm"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/bg_shape_circle_border"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/username2"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="JM Casipong"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_heart_hollow"
                android:layout_toRightOf="@id/username2"
                android:layout_marginStart="40dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/insert"
            android:layout_width="325dp"
            android:layout_height="80dp"
            android:background="@drawable/border"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/insertuser"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_category_plus"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>