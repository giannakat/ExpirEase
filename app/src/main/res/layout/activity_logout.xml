<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="200dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:background="@drawable/border" android:gravity="center_vertical">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <EditText android:id="@+id/logout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Come back soon!" android:textSize="20sp" android:textStyle="bold" android:layout_marginBottom="20dp" android:layout_centerHorizontal="true"/>
            <TextView android:id="@+id/text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Are you sure you want to Log out?" android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black" android:layout_below="@id/logout"/>
            <LinearLayout android:id="@+id/buttons" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/text" android:layout_centerHorizontal="true" android:layout_marginTop="20dp">
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#6AA644" android:text="Yes" android:layout_marginRight="10dp"/>
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#FF0000" android:text="No"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>