<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="0dp"
        android:gravity="center_horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <!-- Cover Photo (Background) -->
            <ImageView
                android:id="@+id/coverPhoto"
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default_cover_photo"/> <!-- Change to your cover image -->

            <!-- Profile Picture (Overlapping Cover) -->
            <ImageView
                android:id="@+id/accountIcon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="0dp"
                android:src="@drawable/img_placeholder_user"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/editPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="30dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Photo "
                android:textSize="14sp"
                android:textColor="@color/green"
                android:textStyle="bold"/>

            <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/green_edit_pen"
            android:layout_marginEnd="0dp"/>

        </LinearLayout>




        <!-- Name Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="30dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/nameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gianna Carreon"
                    android:background="@null"
                    android:textSize="16sp"

                    android:paddingLeft="40dp"
                    android:focusable="false"
                    android:cursorVisible="false"/>

                <ImageView
                    android:id="@+id/editName"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_profile_edit_pen_2"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Username Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="30dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Username"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/usernameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="16sp"
                    android:text="gianna"
                    android:paddingLeft="40dp"
                    android:focusable="false"
                    android:cursorVisible="false"/>

                <ImageView
                    android:id="@+id/editUsername"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_profile_edit_pen_2"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Email Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="30dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/emailValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gianna@example.com"
                    android:background="@null"
                    android:textSize="16sp"
                    android:paddingLeft="40dp"
                    android:focusable="false"
                    android:cursorVisible="false"/>

                <ImageView
                    android:id="@+id/editEmail"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_profile_edit_pen_2"
                    android:focusable="false"
                    android:cursorVisible="false"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Phone Number Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="30dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phone Number"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/phoneValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+63 912 345 6789"
                    android:background="@null"
                    android:textSize="16sp"
                    android:paddingLeft="40dp"
                    android:focusable="false"
                    android:cursorVisible="false"/>

                <ImageView
                    android:id="@+id/editPhone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_profile_edit_pen_2"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <!-- Password Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="30dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Password"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/passwordValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="**********"
                    android:background="@null"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:paddingLeft="40dp"
                    android:focusable="false"
                    android:cursorVisible="false"/>

                <ImageView
                    android:id="@+id/editPassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_profile_edit_pen_2"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Save Changes Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/saveProfileButton"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_background"
                android:text="Save Changes"
                android:textColor="@color/white"
                android:layout_marginRight="20dp"/>
            <Button
                android:id="@+id/back_button"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:text="Back"
                android:background="@drawable/border_button"
                android:textColor="@color/black"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
