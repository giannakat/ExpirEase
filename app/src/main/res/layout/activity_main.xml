        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#f0f0f0"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">

                    <!-- Icon (Takes up available space) -->
                    <ImageView
                        android:id="@+id/category_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/pantry"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:layout_weight="1"/> <!-- Pushes text to the bottom -->

                    <!-- Text (Always at the bottom) -->
                    <TextView
                        android:id="@+id/category_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pantry"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:layout_toRightOf="@id/first"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#f0f0f0"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">

                    <!-- Icon (Takes up available space) -->
                    <ImageView
                        android:id="@+id/fridge_icon"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/fridge"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:layout_weight="1"/> <!-- Pushes text to the bottom -->

                    <!-- Text (Always at the bottom) -->
                    <TextView
                        android:id="@+id/fridge_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fridge"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/freezer_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:layout_toRightOf="@id/second"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#f0f0f0"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">

                    <!-- Icon (Takes up available space) -->
                    <ImageView
                        android:id="@+id/freezer_icon"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/freezer"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:layout_weight="1"/> <!-- Pushes text to the bottom -->

                    <!-- Text (Always at the bottom) -->
                    <TextView
                        android:id="@+id/freezer_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Freezer"

                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/add_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:layout_toRightOf="@id/freezer_box"

                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">

                    <!-- Icon (Takes up available space) -->
                    <ImageView
                        android:id="@+id/addstorage_icon"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/plus"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:layout_weight="1"/> <!-- Pushes text to the bottom -->

                    <!-- Text (Always at the bottom) -->
                    <TextView
                        android:id="@+id/addstorage_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Storage"
                        android:textSize="12sp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Fresh Items"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="15dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#dbf5ca">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/avocado"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:text="Avocado"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/nameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fresh"
                    android:textSize="16sp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/green"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="15dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#dbf5ca">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/banana"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:text="Banana"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fresh"
                    android:textSize="16sp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/green"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="15dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#dbf5ca">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/cabbage"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:text="Rice"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fresh"
                    android:textSize="16sp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/green"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_header"/>


</androidx.drawerlayout.widget.DrawerLayout>
