<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App.Dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">60%</item> <!-- control the width -->
        <item name="android:windowMinWidthMinor">60%</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Theme.App.Dialog.SplashScreen">
        <item  name="windowSplashScreenAnimatedIcon">@drawable/bg_button_solid</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
    </style>

    <style name="OutlinedCustomButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primaryColor</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="rippleColor">@color/custom_ripple_color</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="CircleButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/accent</item>
        <item name="rippleColor">@color/custom_ripple_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">999dp</item> <!-- large value for perfect circle -->
        <item name="elevation">4dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
    </style>


</resources>
